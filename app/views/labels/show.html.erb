<h2>Artists with releases on <%= @label.title %></h2>
<ol>
  <% @label.artists.each do |artist| %>
    <li>
      <h3><%= link_to artist.name, label_artist_path(@label, artist) %></h3>
      <ol>
        <%= render artist.albums.on(@label), locals: { tag: :li } %>
      </ol>
    </li>
  <% end %>
</ol>
